{
  "extends": "../../tsconfig.base",

  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    }
  }
}
