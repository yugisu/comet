{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["esnext"],
    "strict": true,
    "allowJs": true,

    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "outDir": "build",
    "sourceMap": true
  }
}
